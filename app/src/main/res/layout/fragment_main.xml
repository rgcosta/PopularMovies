<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:showIn="@layout/activity_main"
    tools:context=".MoviesFragment">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:id="@+id/gridMovies"

        android:columnWidth="@dimen/poster_width"
        android:paddingBottom="@dimen/poster_padding"
        android:paddingTop="@dimen/poster_padding"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="@dimen/poster_padding"
        />

</FrameLayout>
